{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/iconfont/iconfont.js"
    ]
  },
  "rules": {
    // everyone like lambda
    "jsx-no-lambda": false,
    "no-bitwise": false,
    "ordered-imports": false,
    "class-name": false,
    "no-console": false,
    "only-arrow-functions": false,
    "object-literal-sort-keys": false,
    "no-string-literal": false,
    "object-literal-shorthand": false,
    "no-debugger": false,
    "no-reference": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "max-classes-per-file": [
      true,
      2
    ]
  }
}